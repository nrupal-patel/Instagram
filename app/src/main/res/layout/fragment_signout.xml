<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are You Sure You Want To SignOut?.."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/tvConfirmSignOut"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_below="@+id/tvConfirmSignOut"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnConfirmSignOut"
            android:textSize="20sp"
            android:background="@drawable/white_rounded_btn"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:id="@+id/signoutProgressBar"
        android:paddingBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signing Out...."
        android:textSize="20sp"
        android:layout_alignBottom="@+id/signoutProgressBar"
        android:layout_alignRight="@+id/signoutProgressBar"
        android:layout_alignLeft="@+id/signoutProgressBar"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tvSigningOut"/>

</RelativeLayout>